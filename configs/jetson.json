{
    "logging": {
        "dir": "/obcpp/logs"
    },
    "network": {
        "mavlink": {
            "connect": "serial:///dev/ttyTHS1",
            "log_params": false,
            "telem_poll_rate": 1.0
        },
        "cv": {
            "model_path": "/obcpp/models/sam3_detection.onnx",
            "tokenizer_path": "/obcpp/models/tokenizer.json",
            "prompt": "person",
            "detection_threshold": 0.60,
            "input_width": 1008,
            "input_height": 1008
        }
    },
    "pathing": {
        "laps": 10,
        "dubins": {
            "turning_radius": 5.0,
            "point_separation": 20.0
        },
        "rrt": {
            "iterations_per_waypoint": 512,
            "rewire_radius": 256.0,
            "optimize": true,
            "point_fetch_method": "nearest",
            "allowed_to_skip_waypoints": false,
            "generate_deviations": false
        },
        "coverage": {
            "altitude_m": 30.0,
            "camera_vision_m": 6.0,
            "method": "hover",
            "hover": {
                "pictures_per_stop": 1,
                "hover_time_s": 1
            },
            "forward": {
                "optimize": true,
                "vertical": false,
                "one_way": false
            }
        },
        "approach": {
            "drop_method": "unguided",
            "drop_angle_rad": 2.52134317,
            "drop_altitude_m": 26.0,
            "guided_drop_distance_m": 50.0,
            "unguided_drop_distance_m": 50.0
        }
    },
    "cv": {
        "model_path": "/obcpp/models/sam3_detection.onnx",
        "detection_threshold": 0.60,
        "input_width": 896,
        "input_height": 896
    },
    "camera": {
        "_comment": "See CameraConfig struct in datatypes.hpp for detailed explanations",
        "type": "picamera",
        "save_dir": "/obcpp/images/",
        "save_images_to_file": true,
        "mock": {
            "not_stolen_port": 6060,
            "runway": "right",
            "num_targets": 2
        },
        "lucid": {
            "sensor_shutter_mode": "Rolling",
            "acquisition_frame_rate_enable": true,
            "target_brightness": 20,
            "exposure_auto": "Continuous",
            "exposure_time": 3000,
            "exposure_auto_damping": 1,
            "exposure_auto_algorithm": "Median",
            "exposure_auto_upper_limit": 500,
            "exposure_auto_lower_limit": 360,
            "stream_auto_negotiate_packet_size": true,
            "stream_packet_resend_enable": true,
            "device_link_throughput_limit_mode": "On",
            "device_link_throughput_limit": 125000000,
            "gamma_enable": true,
            "gamma": 0.5,
            "gain_auto": "Continuous",
            "gain_auto_upper_limit": 10,
            "gain_auto_lower_limit": 1
        }
    },
    "mavlink": {
        "log_params": false
    }
}